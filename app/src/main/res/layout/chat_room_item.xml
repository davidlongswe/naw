<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/chat_room_name"
                android:layout_marginStart="10dp"
                android:text="CONTACT NAME"
                android:textColor="#e94f3f"
                android:textStyle="normal|bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/time_room_created"
                android:layout_toEndOf="@id/chat_room_name"
                android:textStyle="italic"
                android:text="2020-08-30 01:49"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/contact_profile_picture"
                android:layout_below="@id/chat_room_name"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/profile_pic_me"/>
            <com.github.library.bubbleview.BubbleTextView
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="visible"
                android:layout_toEndOf="@id/contact_profile_picture"
                android:layout_below="@id/time_room_created"
                android:layout_margin="10dp"
                android:id="@+id/current_user_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:arrowWidth="8dp"
                app:angle="8dp"
                android:text="lorem ipsum lorem ipsum lorem ipsum"
                app:arrowHeight="10dp"
                app:arrowPosition="14dp"
                app:arrowLocation="left"
                app:bubbleColor="#e94f3f"
                app:arrowCenter="true" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>