<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umu.se.dalo0013.naw.HomePageActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/armwrestling_logo"
                android:contentDescription="TODO" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/find_armwrestlers"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/go_to_map_from_home_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/here"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/form_background"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/become_a"
                    android:layout_marginEnd="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/titan_one"
                    android:text="@string/champion"
                    android:textColor="#FFCB31"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tutorial_videos"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="25sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@android:color/white"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tutorial_videos_recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popular_youtube_channels"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@android:color/white"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/arm_bets_tv_channel"
                                android:src="@drawable/armbets_tv_thumbnail"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="12sp"
                                android:text="@string/armbets_tv"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/arm_wrestling_tv_channel"
                                android:src="@drawable/armwrestling_tv_thumbnail"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="12sp"
                                android:text="@string/armwrestling_tv"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/devon_larratt_channel"
                                android:src="@drawable/devon_larratt_thumbnail"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/devonlarratt"
                                android:textSize="12sp"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/global_arm_wrestling_channel"
                                android:src="@drawable/global_armwrestling_thumbnail"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/global_arm_wresting"
                                android:textSize="12sp"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ryan_bowen_channel"
                                android:src="@drawable/ryan_bowen_thumbnail"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/ryan_bowen"
                                android:textSize="12sp"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/sweden_arm_wrestling_tv_channel"
                                android:src="@drawable/sweden_armwrestling_tv_thumbnail"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/sweden_awtv"
                                android:textSize="12sp"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/voice_of_arm_wrestling_channel"
                                android:src="@drawable/voice_of_armwrestling_thumbnail"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/voice_of_armw"
                                android:textSize="12sp"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/wal_channel"
                                android:src="@drawable/wal_thumbnail"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/wal"
                                android:textSize="12sp"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popular_videos"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@android:color/white"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/popular_videos_recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>