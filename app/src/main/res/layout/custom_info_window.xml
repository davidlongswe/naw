<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/custom_iw_background">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/info_window_profile_picture"
        android:layout_width="120dp"
        android:src="@drawable/profile_pic_me"
        android:padding="10dp"
        android:layout_height="120dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_toEndOf="@id/info_window_profile_picture">
        <TextView
            android:id="@+id/info_window_user_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="David"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>